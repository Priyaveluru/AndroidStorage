<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <TextView
        android:text="Add New Product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="Item Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/review"
        android:layout_toLeftOf="@+id/editText4"
        android:layout_alignLeft="@+id/review"
        android:layout_alignStart="@+id/review"
        android:textStyle="normal|bold" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/description"
        android:layout_alignEnd="@+id/description"
        android:layout_marginBottom="33dp"
        android:id="@+id/Add"
        android:background="#008000"
        android:textColor="#FFFFFF"
        android:onClick="add" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/Cancel"
        android:layout_alignBaseline="@+id/Add"
        android:layout_alignBottom="@+id/Add"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:background="#008000"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/Item_Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Item Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Price"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/Item_Name"
        android:layout_alignLeft="@+id/Item_Name"
        android:layout_alignStart="@+id/Item_Name"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/Price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Item Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Item_Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="49dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:background="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/description"
        android:layout_toEndOf="@+id/description"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText4"
        android:background="#FFFFFF"
        android:textSize="18sp"
        android:layout_alignTop="@+id/description"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Item Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/editText3"
        android:layout_alignLeft="@+id/Price"
        android:layout_alignStart="@+id/Price" />

</RelativeLayout>